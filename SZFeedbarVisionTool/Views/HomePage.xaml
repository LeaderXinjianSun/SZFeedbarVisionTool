<UserControl x:Class="SZFeedbarVisionTool.Views.HomePage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SZFeedbarVisionTool.Views"
             xmlns:halconviewer="clr-namespace:HalconViewer;assembly=HalconViewer"
             mc:Ignorable="d" 
             d:DesignHeight="540" d:DesignWidth="800">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Dictionary1.xaml"></ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <halconviewer:ImageViewer Visibility="{Binding HalconWindowVisibility}" Name="CameraImageViewer" Margin="1" Image="{Binding CameraIamge}" AutoRepaint="True" AppendHObject="{Binding CameraAppendHObject}" GCStyle="{Binding CameraGCStyle}" ROIList="{Binding ROIList}" ActiveIndex ="{Binding ActiveIndex,Mode=TwoWay}" Repaint="{Binding Repaint}"></halconviewer:ImageViewer>
        <TextBox Grid.Row="1" VerticalAlignment="Stretch" VerticalContentAlignment="Top" HorizontalContentAlignment="Left" Margin="1" x:Name="MsgTextBox" IsReadOnly="True" TextChanged="MsgTextBox_TextChanged"  FontSize="14" Background="Black" FontFamily="宋体" Foreground="White" AcceptsReturn="True" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" Text="{Binding MessageStr}"></TextBox>
        <Grid Grid.Column="1" Grid.RowSpan="2">
            <Grid.RowDefinitions>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition Height="5*"></RowDefinition>
            </Grid.RowDefinitions>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Button Grid.Column="1" Style="{StaticResource MahApps.Styles.Button.Square.Accent}" Margin="10" Content="拍照" FontSize="24" Command="{Binding GrabCommand}"></Button>
                <Button Grid.Column="2" Style="{StaticResource MahApps.Styles.Button.Square.Accent}" Margin="10" Content="连续" FontSize="24" Command="{Binding ContinueGrabCommand}"></Button>
            </Grid>
            <Grid Grid.Row="1" Style="{StaticResource GridLoginStatus}">
                <StackPanel Orientation="Vertical">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <RadioButton Content="Ⅰ" Command="{Binding SelectIndexCommand}" CommandParameter="0" IsChecked="{Binding RadioButtonIsChecked[0],Mode=TwoWay}"></RadioButton>
                        <RadioButton Content="Ⅱ" Command="{Binding SelectIndexCommand}" CommandParameter="1" IsChecked="{Binding RadioButtonIsChecked[1],Mode=TwoWay}"></RadioButton>
                        <RadioButton Content="Ⅲ" Command="{Binding SelectIndexCommand}" CommandParameter="2" IsChecked="{Binding RadioButtonIsChecked[2],Mode=TwoWay}"></RadioButton>
                        <RadioButton Content="Ⅳ" Command="{Binding SelectIndexCommand}" CommandParameter="3" IsChecked="{Binding RadioButtonIsChecked[3],Mode=TwoWay}"></RadioButton>
                    </StackPanel>
                    <TextBox Width="60" HorizontalContentAlignment="Center" IsReadOnly="True" Text="{Binding SelectIndexValue}" HorizontalAlignment="Right" Margin="0,5,5,0"></TextBox>
                </StackPanel>

            </Grid>
            <Grid Grid.Row="2" Style="{StaticResource GridLoginStatus}">
                <Grid.RowDefinitions>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Button Grid.Column="1" Style="{StaticResource MahApps.Styles.Button.Square.Accent}" Margin="10" Content="区域" FontSize="24" Command="{Binding RangeCommand}"></Button>
                <Button Grid.Column="2" Style="{StaticResource MahApps.Styles.Button.Square.Accent}" Margin="10" Content="挡边" FontSize="24" Command="{Binding BlockCommand}"></Button>
                <Button Grid.Row="1" Grid.Column="2" Style="{StaticResource MahApps.Styles.Button.Square.Accent}" Margin="10" Content="删除" FontSize="24" Command="{Binding DeleteCommand}"></Button>
                <Button Style="{StaticResource MahApps.Styles.Button.Square.Accent}" Margin="10" Content="读取" FontSize="24" Command="{Binding ReadImageCommand}"></Button>
                <Button Grid.Column="2" Grid.Row="2" Style="{StaticResource MahApps.Styles.Button.Square.Accent}" Margin="10" Content="保存" FontSize="24" Command="{Binding SaveCommand}"></Button>
                <Button Grid.Row="2" Style="{StaticResource MahApps.Styles.Button.Square.Accent}" Margin="10" Content="识别" FontSize="24" Command="{Binding RecognizeCommand}"></Button>
                <StackPanel Orientation="Vertical" Grid.Row="3" Grid.RowSpan="2" Grid.ColumnSpan="3">
                    <StackPanel Orientation="Horizontal" Margin="0,1">
                        <Label Content="Threshold:" Width="80"></Label>
                        <TextBox Width="60" Text="{Binding Threshold}"></TextBox>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
